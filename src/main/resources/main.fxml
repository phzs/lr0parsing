<StackPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="visualization.MainController">
   <children>
      <BorderPane minHeight="800.0" minWidth="600.0">
         <center>
              <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
                <tabs>
                    <Tab fx:id="inputTab" text="Input Grammar">
                          <SplitPane dividerPositions="0.5">
                             <items>
                                   <ScrollPane fx:id="grammarInputScrollPane" />
                                <VBox>
                                   <children>
                                        <HBox maxWidth="240.0">
                                           <children>
                                              <Label prefWidth="180.0" text="Start Symbol:" textAlignment="LEFT">
                                               <padding>
                                                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                               </padding>
                                            </Label>
                                            <ChoiceBox fx:id="startSymbolChoiceBox" prefWidth="60.0" />
                                           </children>
                                        </HBox>
                                      <Button fx:id="clearRulesButton" mnemonicParsing="false" onAction="#handleClearRulesButtonAction" prefHeight="26.0" prefWidth="240.0" text="Clear rules">
                                         <VBox.margin>
                                            <Insets />
                                         </VBox.margin>
                                      </Button>
                                      <Button fx:id="addRuleButton" mnemonicParsing="false" onAction="#handleAddRuleButtonAction" prefHeight="26.0" prefWidth="240.0" text="Add rule" />
                                      <Button fx:id="removeRuleButton" mnemonicParsing="false" onAction="#handleRemoveRuleButtonAction" prefHeight="26.0" prefWidth="240.0" text="Remove last rule" />
                                      <Button fx:id="startStopButton" mnemonicParsing="false" onAction="#handleStartStopButtonAction" prefHeight="67.0" prefWidth="240.0" text="Start Parsing" />
                                   </children>
                                </VBox>
                             </items>
                          </SplitPane>
                    </Tab>
                  <Tab fx:id="parsingTab" text="LR(0)-Parsing">
                       <content>
                        <VBox>
                           <children>
                               <VBox maxHeight="25.0" prefHeight="25.0" styleClass="stepDescriptionBar">
                                   <children>
                                       <Label fx:id="stepControllerLabel" maxHeight="25.0" styleClass="stepDescriptionLabel" text="" textAlignment="CENTER" />
                                   </children>
                               </VBox>
                               <ScrollPane fx:id="parsingParent" VBox.vgrow="ALWAYS">
                                     <WebView fx:id="parsingWebView" managed="false" minHeight="400.0" minWidth="400.0" prefHeight="-1.0" prefWidth="-1.0" />
                                 </ScrollPane>
                           </children>
                        </VBox>
                       </content>
                  </Tab>
                    <Tab fx:id="analysisTab" text="Syntax Analysis">
                      <content>
                          <VBox>
                              <children>
                                  <SplitPane fx:id="analysisAnchorPane" dividerPositions="0.5">
                                      <items>
                                          <ParseTableView fx:id="analysisTableView" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" opacity="0.9" prefHeight="287.0" prefWidth="300.0" />
                                          <VBox>
                                              <children>
                                                  <TextArea fx:id="analysisInputTextArea" prefHeight="261.0" prefWidth="1699.0" text="baab" />
                                                  <Button fx:id="analysisStartButton" onAction="#handleAnalysisStartButtonAction" text="Analyze Input" />
                                              </children>
                                          </VBox>
                                      </items>
                                  </SplitPane>
                                  <VBox fx:id="analysisVBox">
                                      <children>
                                          <Pane fx:id="stackPane" minHeight="50">
                                              <VBox.margin>
                                                  <Insets />
                                              </VBox.margin>
                                          </Pane>
                                          <Label fx:id="analysisInputDisplay" text="Input">
                                              <VBox.margin>
                                                  <Insets left="50.0" />
                                              </VBox.margin>
                                              <font>
                                                  <Font size="24.0" />
                                              </font>
                                          </Label>
                                          <Label fx:id="analysisResultDisplay" layoutX="60.0" layoutY="160.0" text="Result">
                                              <font>
                                                  <Font size="24.0" />
                                              </font>
                                              <VBox.margin>
                                                  <Insets left="50.0" top="50.0" />
                                              </VBox.margin>
                                          </Label>
                                      </children>
                                  </VBox>
                              </children>
                          </VBox>
                      </content>
                    </Tab>
                </tabs>
              </TabPane>
