<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="800.0" minWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="visualization.MainController">
   <center>
      <StackPane pickOnBounds="false">
         <children>
            <TabPane tabClosingPolicy="UNAVAILABLE">
              <tabs>
                  <Tab text="1 Input">
                     <content>
                         <ScrollPane fx:id="grammarInputScrollPane" hbarPolicy="ALWAYS" vbarPolicy="ALWAYS">
                           <content>
                              <TextArea fx:id="grammarInputField" prefHeight="600.0" prefWidth="480.0" />
                           </content>
                         </ScrollPane>
                     </content>
                  </Tab>
                <Tab text="2 Parsing">
                     <content>
                        <ScrollPane maxHeight="-Infinity" maxWidth="-Infinity">
                           <content>
                              <Canvas fx:id="graphCanvas" height="600.0" width="800.0" />
                           </content>
                        </ScrollPane>
                     </content>
                </Tab>
                <Tab text="3 Syntax Analysis">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                  </content>
                </Tab>
              </tabs>
            </TabPane>
            <AnchorPane pickOnBounds="false" prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Button fx:id="startStopButton" layoutX="254.0" layoutY="691.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="112.0" text="Start Parsing" AnchorPane.bottomAnchor="30.0" />
                  <Slider layoutX="430.0" layoutY="697.0" prefHeight="38.0" prefWidth="207.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" AnchorPane.bottomAnchor="30.0" />
                  <Button layoutX="687.0" layoutY="691.0" mnemonicParsing="false" prefHeight="50.0" text="Next Step" AnchorPane.bottomAnchor="30.0" AnchorPane.rightAnchor="34.0" />
                  <Button layoutX="14.0" layoutY="691.0" mnemonicParsing="false" prefHeight="50.0" text="Previous Step" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="14.0" />
               </children>
            </AnchorPane>
         </children>
      </StackPane>
   </center>
   <top>
      <MenuBar BorderPane.alignment="TOP_CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" text="Open" />
                  <MenuItem mnemonicParsing="false" text="Save" />
                  <MenuItem mnemonicParsing="false" text="Save as..." />
              <MenuItem mnemonicParsing="false" text="Quit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
